              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "sessionId",
                    "status",
                    "prompt",
                    "promptType",
                    "questionNumber",
                    "totalQuestions"
                  ],
                  "properties": {
                    "sessionId": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "status": {
                      "type": "string",
                      "enum": [
                        "in_progress",
                        "completed"
                      ]
                    },
                    "prompt": {
                      "anyOf": [
                        {
                          "type": "string"
                        },
                        {
                          "type": "null"
                        }
                      ]
                    },
                    "promptType": {
                      "type": "string",
                      "enum": [
                        "question",
                        "follow_up",
                        "completed"
                      ]
                    },
                    "questionNumber": {
                      "type": "integer"
                    },
                    "totalQuestions": {
                      "type": "integer"
