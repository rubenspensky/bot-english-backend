          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "questionCount": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 10
                  },
                  "allowFollowUps": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Default Response",
